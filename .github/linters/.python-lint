[MASTER]

# Use multiple processes to speed up Pylint.
jobs=0

[MESSAGES CONTROL]

# Ignoring Import Errors is desired as super-linter
# does not support installing dependencies as it runs
disable=import-error,locally-disabled,multiple-statements,fixme,line-too-long,missing-module-docstring,broad-exception-raised,missing-function-docstring,redefined-outer-name,invalid-name,unspecified-encoding,missing-class-docstring